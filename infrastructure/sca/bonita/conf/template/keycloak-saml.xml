<keycloak-saml-adapter>
    <SP entityID="bonitaSAML"
        sslPolicy="EXTERNAL"
        nameIDPolicyFormat="urn:oasis:names:tc:SAML:1.1:nameid-format:unspecified"
        forceAuthentication="false"
        isPassive="false"
        logoutPage="http://{EC2_PUBLIC_HOSTNAME}:{BONITA_EXPOSED_PORT}/bonita"
        turnOffChangeSessionIdOnLogin="false">
        <PrincipalNameMapping policy="FROM_ATTRIBUTE" attribute="username"/>
        <IDP entityID="idp">
            <SingleSignOnService signRequest="false"
               validateResponseSignature="false"
               validateAssertionSignature="false"
               requestBinding="POST"
               responseBinding="POST"
               bindingUrl="http://{EC2_PUBLIC_HOSTNAME}:{KEYCLOAK_EXPOSED_PORT}/realms/bonita/protocol/saml"/>
            <SingleLogoutService signRequest="false"
               signResponse="false"
               validateRequestSignature="false"
               validateResponseSignature="false"
               requestBinding="POST"
               responseBinding="POST"
               postBindingUrl="http://{EC2_PUBLIC_HOSTNAME}:{KEYCLOAK_EXPOSED_PORT}/realms/bonita/protocol/saml"
               redirectBindingUrl="http://{EC2_PUBLIC_HOSTNAME}:{KEYCLOAK_EXPOSED_PORT}/realms/bonita/protocol/saml"/>
        </IDP>
     </SP>
</keycloak-saml-adapter>
